image:
  repository: "${image_repository}"
  pullPolicy: Always
  tag: "${image_tag}"
  sha: "${image_sha}"

affinity:
  nodeAffinity:
    requiredDuringSchedulingIgnoredDuringExecution:
      nodeSelectorTerms:
        - matchExpressions:
            - key: topology.kubernetes.io/zone
              operator: In
              values:
                - "${region_name}a"